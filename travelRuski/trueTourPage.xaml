<Page x:Class="travelRuski.trueTourPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:travelRuski"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="trueTourPage">
    <Grid>
        <DataGrid AutoGenerateColumns="True" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Width="200"/>
                <DataGridTextColumn Header="Стоимость" Width="200"/>
                <DataGridTextColumn Header="Страна" Width="200"/>
                <DataGridTextColumn Header="Курорт :)" Width="200"/>
            </DataGrid.Columns>
            <Button></Button>
        </DataGrid>
    </Grid>
</Page>
